<table class="table table-striped table-hover table-condensed table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Created</th>
    </tr>
  </thead>
  <tbody>
    <% @issues.each do |i| %>
      <tr>
        <td>
          <!-- <%= link_to i.title, "/issues/#{i.id}" %> -->
          <a href="/issues/<%= i.id %>">
            <%= i.title %>
          </a>
        </td>
        <td><%= i.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>